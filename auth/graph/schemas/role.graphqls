extend type Query {
	RoleByID(id: Int!): Role @auth
	Roles(
		first: Int
		after: Cursor
		last: Int
		before: Cursor
		orderBy: RoleOrder
		where: RoleWhereInput
	): RoleConnection! @auth
}

extend type Mutation {
	createRole(input: CreateRoleInput!): Role! @auth
	createBulkRole(input: [CreateRoleInput!]!): [Role!]! @auth
	updateRole(id: Int!, input: UpdateRoleInput!): Role! @auth
	deleteRole(id: Int!): Boolean! @auth
}
